{
    "name": "silverstripe/platform-project",
    "description": "The SilverStripe Platform base project / installer.",
    "require": {
        "php": ">=5.6",
        "silverstripe/recipe-cms": "^4",
        "silverstripe/dynamodb": "^4",
        "silverstripe/crontask": "^2",
        "silverstripe/environmentcheck": "^2",
        "silverstripe/raygun": "^2",
        "benmanu/silverstripe-simple-styleguide": "^2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.7",
        "lekoala/silverstripe-debugbar": "2.x-dev"
    },
    "config": {
        "process-timeout": 600
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "extra": {
        "project-files-installed": [
            "app/.htaccess",
            "app/_config.php",
            "app/_config/mysite.yml",
            "app/src/Page.php",
            "app/src/PageController.php"
        ],
        "public-files-installed": [
            ".htaccess",
            "index.php",
            "install-frameworkmissing.html",
            "install.php",
            "web.config"
        ],
        "expose": [
            "themes/app/dist"
        ]
    }
}
