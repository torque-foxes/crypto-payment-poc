{
  "extends": [
    "airbnb-base",
    "plugin:vue/essential"
  ],
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true,
    "node": true,
    "jest": true
  },
  "overrides": [
    {
      "files": ["*.vue"],
      "rules": {
        "indent": "off",
        "vue/script-indent": ["error", 2, { "baseIndent": 1 }],
        "max-len": ["error", { "code": 120 }]
      }
    }
  ]
}
