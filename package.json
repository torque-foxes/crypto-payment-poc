  "dependencies": {
    "laravel-mix": "^2.0.0",
    "vue": "^2.5.17",
    "vuex": "^3.1.0",
    "vue-badger-accordion": "^1.1.3",
    "vue-tiny-slider": "^0.1.35"
  },
  "devDependencies": {
    "@vue/test-utils": "^1.0.0-beta.29",
    "babel-jest": "^24.5.0",
    "babel-preset-vue": "^2.0.2",
    "bootstrap": "^4.1.0",
    "chromedriver": "^76.0.0",
    "cucumber": "^4.0.0",
    "eslint": "^4.19.1",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-loader": "^2.1.1",
