{
  "name": "skeletron",
  "version": "0.0.0",
  "repository": "https://github.com/silverstripeltd/project-skeleton.git",
  "author": "Your team name <team@silverstripe.com>",
  "license": "MIT",
  "scripts": {
    "dev": "npx mix",
    "watch": "npx mix watch",
    "build": "cross-env NODE_ENV=production npx mix --production",
    "prettier:check": "prettier --check themes/app/src/**/*.{scss,vue}",
    "prettier:write": "prettier --write themes/app/src/**/*.{scss,vue}",
    "test": "yarn test:app && yarn test:e2e && yarn test:coverage",
    "test:e2e": "cypress run --browser chrome",
    "test:app": "jest themes/app/src",
    "test:coverage": "node nyc-coverage.js",
    "lint:css": "stylelint themes/app/src/scss/**/*.scss themes/app/src/js/**/*.vue",
    "lint:js": "eslint --ext .js,.vue themes/app/src/js",
    "lint": "yarn lint:css && yarn lint:js",
    "storybook": "start-storybook -p 6006",
    "storybook:build": "build-storybook"
  },
  "devDependencies": {
    "@babel/core": "^7.14.8",
    "@cypress/code-coverage": "^3.9.10",
    "@storybook/addon-actions": "^6.3.6",
    "@storybook/addon-essentials": "^6.3.6",
    "@storybook/addon-knobs": "^6.3.0",
    "@storybook/addon-links": "^6.3.6",
    "@storybook/builder-webpack5": "^6.3.6",
    "@storybook/manager-webpack5": "^6.3.6",
    "@storybook/vue3": "^6.3.6",
    "@vue/compiler-sfc": "^3.1.5",
    "@vue/test-utils": "^2.0.0-rc.12",
    "babel-jest": "^26.6.3",
    "babel-loader": "^8.2.2",
    "babel-plugin-istanbul": "^6.0.0",
    "bootstrap": "^5.0.2",
    "browser-sync": "^2.27.5",
    "browser-sync-webpack-plugin": "^2.3.0",
    "cross-env": "^7.0.3",
    "cypress": "^8.1.0",
    "cypress-cucumber-preprocessor": "^4.2.0",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.1.0",
    "eslint-loader": "^4.0.2",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-vue": "^7.15.1",
    "fs-extra": "^10.0.0",
    "html-webpack-plugin": "^5.3.2",
    "jest": "^26.6.3",
    "jest-serializer-vue": "^2.0.2",
    "laravel-mix": "^6.0.27",
    "nyc": "^15.1.0",
    "postcss": "^8.3.6",
    "prettier": "^2.3.2",
    "resolve-url-loader": "^4.0.0",
    "sass": "^1.37.2",
    "sass-loader": "^12.1.0",
    "stylelint": "^13.12.0",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-standard": "^22.0.0",
    "stylelint-scss": "^3.20.1",
    "stylelint-webpack-plugin": "^3.0.1",
    "typescript": "^4.3.5",
    "vue-jest": "^5.0.0-alpha.10",
    "vue-loader": "^16.4.1",
    "webpack": "^5.48.0"
  },
  "dependencies": {
    "dotenv": "^10.0.0",
    "promise-polyfill": "^8.2.0",
    "vue": "^3.1",
    "vuex": "^4.0"
  },
  "resolutions": {
    "webpack": "5.48.0"
  },
  "cypress-cucumber-preprocessor": {
    "nonGlobalStepDefinitions": true
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "vue"
    ],
    "transform": {
      ".*\\.(vue)$": "<rootDir>/node_modules/vue-jest",
      "^.+\\.js$": "<rootDir>/node_modules/babel-jest"
    },
    "snapshotSerializers": [
      "jest-serializer-vue"
    ],
    "collectCoverage": true,
    "coverageDirectory": "coverage/jest"
  },
  "nyc": {
    "extension": [
      ".js",
      ".vue"
    ],
    "report-dir": "coverage/cypress"
  }
}
